<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class name="com.opensymphony.workflow.spi.hibernate.HibernateHistoryStep" table="OS_HISTORYSTEP">
        <id name="id" unsaved-value="any">
            <generator class="native"/>
        </id>
        <property name="actionId"/>
        <property name="caller"/>
        <property name="finishDate"/>
        <property name="startDate"/>
        <property name="dueDate"/>
        <property name="owner"/>
        <property name="status"/>
        <property name="stepId"/>

        <many-to-one name="entry" class="com.opensymphony.workflow.spi.hibernate.HibernateWorkflowEntry" column="entryId"/>
    </class>
</hibernate-mapping>
